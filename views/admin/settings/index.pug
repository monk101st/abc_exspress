extends ../../layout

block content
  div(class='content-container')
    h1 #{title}
    div(class='row')
      div(class='col-6')
      div(class='col-6')
        div(class=' row head-roles-title') 
          div(class='col-4')
            h4 Role w systemie
          div(class='col-4')
          div(class='col-4')
            a(href='/admin/settings/roles/add' class='add-link')
              i(class="bi bi-plus-circle-fill p-3")
          table(class="table table-striped table-dark")
            div(class='head-roles-tables')
              thead
                tr
                  th(scope="row") #
                  th Nazwa
                  th(class='text-right') Akcje
            div(class='data-roles-tables')
              each item, index in data 
                tbody
                  tr
                    th(scope="row") #{index+1}
                    td #{item.roleName}
                    td(class='text-right')
                      a(href=`/admin/settings/roles/show/${item._id}` class='show-icon-link') 
                        i(class="bi bi-play-fill m-2")
                      a(href=`/admin/settings/roles/edit/${item._id}` class='edit-icon-link') 
                        i(class="bi bi-pencil-fill m-2")
                      a(href=`/admin/settings/roles/delete/${item._id}` class='delete-icon-link') 
                        i(class="bi bi-x-circle-fill m-2")

